<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:TriboPersonalEstudio.View"
             x:Class="TriboPersonalEstudio.View.AlunoAppShell">
    <TabBar>
        <Tab Title="Início" Icon="home.png" Route="Main">
            <ShellContent Title="Início" ContentTemplate="{DataTemplate views:AlunoMainView}" />
        </Tab>

        <Tab Title="Alunos" Icon="user.png">
            <ShellContent Title="Ativos" ContentTemplate="{DataTemplate views:AlunoPerfilView}" />            
        </Tab>        

    </TabBar>
</Shell>