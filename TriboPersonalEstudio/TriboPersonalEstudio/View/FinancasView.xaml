            <StackLayout>

                <Label
                    x:Name="lblMesAtual"
                    Margin="10,20,0,0"
                    TextColor="OrangeRed"
                    FontFamily="OpenSansSemiBold"
                    FontSize="20" />

                <StackLayout Padding="0" Orientation="Horizontal">

                    <Label
